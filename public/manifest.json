{
  "name": "ColdFire",
  "version": "1.0.2",
  "manifest_version": 2,
  "description": "Adds ColdFire support.",
  "devtools_page": "devtools/index.html",
  "background": { "scripts": ["background.js"] },
  "browser_action": {
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
    {
      "js": ["content.js"]
    }
  ],
  "permissions": ["tabs", "http://*/*", "https://*/*"]
}
