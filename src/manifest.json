{
  "name": "e2e",
  "version": "1.0.2",
  "manifest_version": 2,
  "description": "",
  "devtools_page": "devtools/index.html",
  "background": { "scripts": ["background/index.ts"] },
  "browser_action": {
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content/index.ts"]
    }
  ],
  "web_accessible_resources": [
    "devtools/panel.html"
  ],
  "permissions": ["tabs", "http://*/*", "https://*/*"]
}
